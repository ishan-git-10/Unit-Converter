<%- include("./partials/header") %> 

<h1 name="<%= Name %>"><%= Name %>  &nbsp;Conversion</h1>
<i class="fa-solid <%= icon %>"></i>
<div class="container text-center">
    <div class="row cacl">
        <div class="col col-lg-6 d-flex justify-content-center">
            <div class="inp-box">
                <form>
                <div class="input-group">
                    <input class="text-inp btn btn-light btn-md left" type="number" step="any" placeholder="Select Unit" id="num1" readonly autocomplete="off">
                    <select class="btn btn-md btn-dark" id="sel1">
                        <option class="left" value="0" selected disabled>--Unit--</option>
                        <% for(let i=0;i<units.length;i++){ %>
                            <option class="left" value="<%= i+1 %>" id="<%= i+1 %>"><%= units[i] %></option>
                        <% } %> 
                    </select>
                </div>
                </form>
            </div>
        </div>
        <div class="col col-lg-6 d-flex justify-content-center">
            <div class="inp-box">
                <form>
                <div class="input-group">
                    <input class="text-inp btn btn-light btn-md left" type="number" step="any" placeholder="Select Unit" id="num2" readonly autocomplete="off">
                    <select class="btn btn-md btn-dark" id="sel2">
                        <option class="left" value="0" selected disabled>--Unit--</option>
                        <% for(let i=0;i<units.length;i++){ %> 
                            <option class="left" value="<%= i+1 %>" id="<%= units.length+i+1 %>"><%= units[i] %></option>
                        <% } %>
                    </select>
                </div>
                </form>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
    <div class="row cacl w-25">
        <div class="col col-lg-6 d-flex justify-content-center">
            <button id="reset" class="resHome btn btn-lg btn-outline-light">Reset</button>
        </div>
        <div class="col col-lg-6 d-flex justify-content-center">
            <form action="/home" method="get">
                <button class="resHome btn btn-lg btn-outline-light">Home</button>
            </form>
        </div>
    </div>
    </div>
</div>

<script src="/js/convert.js"></script>
<%- include("./partials/footer") %>